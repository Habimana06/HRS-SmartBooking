@page "/Admin/RolesPermissions"
@model HRS_SmartBooking.Pages.Admin.RolesPermissionsModel
@using HRS_SmartBooking.Helpers
@{
    ViewData["Title"] = "Roles & Permissions";
    var lang = TranslationHelper.GetCurrentLanguage(HttpContext);
}

<section class="reception-page admin-page">
    <header class="reception-header">
        <div>
            <p class="eyebrow">Roles</p>
            <h1>@TranslationHelper.T("Roles & Permissions", lang)</h1>
            <p>@TranslationHelper.T("Role list", lang), @TranslationHelper.T("Permission matrix", lang), and quick actions.</p>
        </div>
        <div class="header-actions">
            <button class="btn btn-outline-light">@TranslationHelper.T("Create role", lang)</button>
            <button class="btn btn-gradient">@TranslationHelper.T("Assign to users", lang)</button>
        </div>
    </header>

    <div class="card-grid">
        @foreach (var role in Model.Roles)
        {
            <article class="role-card">
                <h2>@role.Name</h2>
                <p>@role.Description</p>
                <span class="badge badge-outline">@role.Members users</span>
                <div class="button-row mt-3">
                    <button class="btn btn-outline-light btn-sm">Edit</button>
                    <button class="btn btn-outline-light btn-sm">Duplicate</button>
                </div>
            </article>
        }
    </div>

    <div class="section-card">
        <div class="card-header">
            <h2>@TranslationHelper.T("Permission matrix", lang)</h2>
            <span class="badge badge-outline">@TranslationHelper.T("Toggle rights", lang)</span>
        </div>
        <div class="permission-matrix">
            <div class="matrix-header">
                <span>@TranslationHelper.T("Module", lang)</span>
                <span>@TranslationHelper.T("Permissions", lang)</span>
                <span>@TranslationHelper.T("Toggle all", lang)</span>
            </div>
            @foreach (var category in Model.PermissionMatrix)
            {
                <div class="matrix-row">
                    <strong>@category.Name</strong>
                    <div class="matrix-perms">
                        @foreach (var perm in category.Permissions)
                        {
                            <label class="chip-toggle">
                                <input type="checkbox" checked />
                                <span>@perm</span>
                            </label>
                        }
                    </div>
                    <button type="button" class="btn btn-outline-light btn-sm">@TranslationHelper.T("Toggle all", lang)</button>
                </div>
            }
        </div>
        <div class="form-actions">
            <button class="btn btn-outline-light">@TranslationHelper.T("Discard", lang)</button>
            <button class="btn btn-gradient">@TranslationHelper.T("Save role", lang)</button>
        </div>
    </div>
</section>

