@page "/Admin/Reports"
@model HRS_SmartBooking.Pages.Admin.ReportsModel
@using HRS_SmartBooking.Helpers
@{
    ViewData["Title"] = "Admin Reports";
    var lang = TranslationHelper.GetCurrentLanguage(HttpContext);
}

<section class="reception-page admin-page">
    <header class="reception-header">
        <div>
            <p class="eyebrow">@TranslationHelper.T("Reports", lang)</p>
            <h1>@TranslationHelper.T("System reports", lang)</h1>
            <p>Revenue, bookings, staff performance, payment stats, demographics.</p>
        </div>
        <div class="header-actions">
            <button class="btn btn-outline-light">@TranslationHelper.T("PDF", lang)</button>
            <button class="btn btn-outline-light">@TranslationHelper.T("Excel", lang)</button>
            <button class="btn btn-gradient">@TranslationHelper.T("Print", lang)</button>
        </div>
    </header>

    <div class="report-grid">
        <article class="report-card">
            <h2>@TranslationHelper.T("Revenue overview", lang)</h2>
            <p>Monthly, quarterly, yearly breakdowns across properties.</p>
            <div class="button-row">
                <button class="btn btn-outline-light btn-sm">@TranslationHelper.T("View", lang)</button>
                <button class="btn btn-outline-light btn-sm">@TranslationHelper.T("Export", lang)</button>
            </div>
        </article>
        <article class="report-card">
            <h2>@TranslationHelper.T("Bookings", lang)</h2>
            <p>Daily/weekly/monthly bookings with occupancy overlays.</p>
            <div class="button-row">
                <button class="btn btn-outline-light btn-sm">@TranslationHelper.T("View", lang)</button>
                <button class="btn btn-outline-light btn-sm">@TranslationHelper.T("Export", lang)</button>
            </div>
        </article>
        <article class="report-card">
            <h2>@TranslationHelper.T("Staff performance", lang)</h2>
            <p>KPIs per department, shifts, and attendance.</p>
            <div class="button-row">
                <button class="btn btn-outline-light btn-sm">@TranslationHelper.T("View", lang)</button>
                <button class="btn btn-outline-light btn-sm">@TranslationHelper.T("Export", lang)</button>
            </div>
        </article>
        <article class="report-card">
            <h2>@TranslationHelper.T("Payment statistics", lang)</h2>
            <p>Success rate, refunds, methods, geography.</p>
            <div class="button-row">
                <button class="btn btn-outline-light btn-sm">@TranslationHelper.T("View", lang)</button>
                <button class="btn btn-outline-light btn-sm">@TranslationHelper.T("Export", lang)</button>
            </div>
        </article>
    </div>
</section>

