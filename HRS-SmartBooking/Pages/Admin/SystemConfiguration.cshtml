@page "/Admin/SystemConfiguration"
@model HRS_SmartBooking.Pages.Admin.SystemConfigurationModel
@{
    ViewData["Title"] = "System Configuration";
}

<section class="reception-page admin-page">
    <header class="reception-header">
        <div>
            <p class="eyebrow">Configuration</p>
            <h1>System configuration</h1>
            <p>Hotel info, branding, payments, currency, tax, notifications, and themes.</p>
        </div>
        <form method="post">
            <button type="submit" class="btn btn-gradient">Save settings</button>
        </form>
    </header>

    <div class="tab-bar">
        <button class="tab active">General</button>
        <button class="tab">Branding</button>
        <button class="tab">Payments</button>
        <button class="tab">Notifications</button>
    </div>

    <div class="section-card">
        <div class="card-header">
            <h2>General</h2>
        </div>
        <div class="form-grid">
            <div>
                <label>Hotel name</label>
                <input type="text" value="HRS Smart Booking" />
            </div>
            <div>
                <label>Default language</label>
                <select>
                    <option>English</option>
                    <option>French</option>
                    <option>Spanish</option>
                </select>
            </div>
            <div>
                <label>Currency</label>
                <select asp-for="Currency" required>
                    <option value="RWF">RWF (Rwandan Franc)</option>
                    <option value="USD">USD (US Dollar)</option>
                </select>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div>
                <label>Tax rate</label>
                <input type="number" value="18" />
            </div>
            <div class="col-span-2">
                <label>Notification email</label>
                <input type="email" value="alerts@hrsbooking.com" />
            </div>
            <div class="col-span-2">
                <label>SMTP host</label>
                <input type="text" placeholder="smtp.mailgun.org" />
            </div>
        </div>
    </div>

    <div class="section-card">
        <div class="card-header">
            <h2>Payment methods</h2>
        </div>
        <div class="toggle-row">
            <label class="switch">
                <input type="checkbox" checked />
                <span></span>
            </label>
            <p>Credit card gateway (Stripe)</p>
        </div>
        <div class="toggle-row">
            <label class="switch">
                <input type="checkbox" checked />
                <span></span>
            </label>
            <p>Corporate invoicing</p>
        </div>
        <div class="toggle-row">
            <label class="switch">
                <input type="checkbox" checked />
                <span></span>
            </label>
            <p>MTN Mobile Money</p>
        </div>
        <div class="toggle-row">
            <label class="switch">
                <input type="checkbox" />
                <span></span>
            </label>
            <p>Cash on arrival</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">@Model.SuccessMessage</div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
</section>

