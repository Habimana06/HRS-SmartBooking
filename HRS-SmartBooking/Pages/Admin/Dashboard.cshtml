@page "/Admin/Dashboard"
@model HRS_SmartBooking.Pages.Admin.DashboardModel
@using HRS_SmartBooking.Helpers
@{
    ViewData["Title"] = "Admin Dashboard";
    var lang = TranslationHelper.GetCurrentLanguage(HttpContext);
}

<section class="reception-page admin-page">
    <header class="reception-header">
        <div>
            <p class="eyebrow">Admin control</p>
            <h1>@TranslationHelper.T("System overview", lang)</h1>
            <p>Widgets, global revenue, user growth, security indicators, and activity feed for the highest role.</p>
        </div>
        <div class="header-actions">
            <a class="btn btn-outline-light" asp-page="/Admin/UserManagement">@TranslationHelper.T("Manage users", lang)</a>
            <a class="btn btn-gradient" asp-page="/Admin/BackupRestore">
                <i class="bi bi-cloud-arrow-up me-2"></i>
                @TranslationHelper.T("Run backup", lang)
            </a>
        </div>
    </header>

    <div class="metric-grid">
        @foreach (var metric in Model.Metrics)
        {
            <article class="metric-card">
                <div class="metric-icon">
                    <i class="bi @metric.Icon"></i>
                </div>
                <div>
                    <p class="metric-label">@metric.Title</p>
                    <h3>@metric.Value</h3>
                    <small>@metric.Detail</small>
                </div>
            </article>
        }
    </div>

    <div class="chart-grid">
        <article class="data-card">
            <div class="card-header">
                <h2>Revenue (yearly)</h2>
                <span class="badge badge-outline">USD Ã—1K</span>
            </div>
            <div class="line-chart-container">
                <div class="line-chart">
                    @foreach (var point in Model.RevenueYearly)
                    {
                        <div class="line-point" title="@point.Label">
                            <span style="height:@($"{Math.Min(point.Value, 200)}px")"></span>
                            <small>@point.Label</small>
                        </div>
                    }
                </div>
            </div>
        </article>
        <article class="data-card">
            <div class="card-header">
                <h2>Bookings (daily)</h2>
            </div>
            <div class="sparkline-container">
                <div class="sparkline">
                    @foreach (var point in Model.BookingsDaily)
                    {
                        <div class="spark-bar" style="height:@point.Value%">
                            <span>@point.Label</span>
                        </div>
                    }
                </div>
            </div>
        </article>
        <article class="data-card">
            <div class="card-header">
                <h2>Payment methods</h2>
            </div>
            <div class="donut-chart">
                @foreach (var slice in Model.PaymentMethods)
                {
                    <div class="donut-slice">
                        <strong>@slice.Value%</strong>
                        <small>@slice.Label</small>
                    </div>
                }
            </div>
        </article>
        <article class="data-card">
            <div class="card-header">
                <h2>User growth</h2>
                <span class="badge badge-outline">Quarterly</span>
            </div>
            <div class="line-chart-container">
                <div class="line-chart compact">
                    @foreach (var point in Model.UserGrowth)
                    {
                        <div class="line-point" title="@point.Label">
                            <span style="height:@($"{Math.Min(point.Value / 4, 200)}px")"></span>
                            <small>@point.Label</small>
                        </div>
                    }
                </div>
            </div>
        </article>
    </div>

    <div class="split-grid mt-3">
        <article class="data-card">
            <div class="card-header">
                <h2>Security indicators</h2>
            </div>
            <div class="security-grid">
                @foreach (var indicator in Model.SecurityStats)
                {
                    <div class="security-card">
                        <i class="bi @indicator.Icon"></i>
                        <strong>@indicator.Value</strong>
                        <small>@indicator.Title</small>
                    </div>
                }
            </div>
        </article>
        <article class="data-card">
            <div class="card-header">
                <h2>Activity feed</h2>
                <span class="badge badge-outline">Live</span>
            </div>
            <ul class="activity-list">
                @foreach (var item in Model.ActivityFeed)
                {
                    <li>
                        <div>
                            <strong>@item.Title</strong>
                            <p>@item.Detail</p>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </li>
                }
            </ul>
        </article>
    </div>
</section>

