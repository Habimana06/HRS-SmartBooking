@using HRS_SmartBooking.Services
@inject AuthService AuthService
@{
    var isAuthenticated = AuthService.IsAuthenticated();
    var userRole = AuthService.GetCurrentUserRole();
    var userName = AuthService.GetCurrentUserId() != null ? 
        $"{Context.Session.GetString("FirstName")} {Context.Session.GetString("LastName")}" : "";
    var htmlLang = "en";
}

<!DOCTYPE html>
<html lang="@htmlLang">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRS Smart Booking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" integrity="sha384-XGjxtQfXaH2tnPFa9x+ruJTuLE3Aa6LhHSWRr1XeTyhezb4abCG4ccI5AkVDxqC+" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HRS_SmartBooking.styles.css" asp-append-version="true" />
</head>
<body class="theme-dark">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">HRS Smart Booking</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (isAuthenticated)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            @if (userRole == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Admin/Dashboard">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Admin/UserManagement">User Management</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Admin/RolePrivilege">Role & Privilege</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Admin/SystemLogs">System Logs</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Admin/Analytics">Analytics</a>
                                </li>
                            }
                            else if (userRole == "Manager")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Manager/Dashboard">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Manager/RoomManagement">Room Management</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Manager/CustomerRecords">Customer Records</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Manager/BookingOverview">Booking Overview</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Manager/Analytics">Analytics</a>
                                </li>
                            }
                            else if (userRole == "Receptionist")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Receptionist/Dashboard">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Receptionist/RoomAvailability">Room Availability</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Receptionist/BookingCreation">Create Booking</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Receptionist/CheckIn">Check-In</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Receptionist/CheckOut">Check-Out</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Receptionist/Support">Support</a>
                                </li>
                            }
                            else if (userRole == "Customer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Customer/Home">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Customer/Rooms">Rooms</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Customer/Booking">Booking</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Customer/MyBookings">My Bookings</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Customer/Support">Support</a>
                                </li>
                            }
                        </ul>
                        <div class="d-flex align-items-center gap-2">
                            <span class="navbar-text me-2">Welcome, @userName</span>
                            <form method="post" asp-page="/Logout" class="d-inline">
                                <button type="submit" class="btn btn-primary btn-sm d-inline-flex align-items-center gap-1">
                                    <i class="bi bi-box-arrow-right"></i>
                                    Logout
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link nav-link-pill" asp-page="/Index">
                                    <i class="bi bi-house-door me-1"></i>
                                    Home
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav align-items-center gap-2">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary nav-cta" asp-page="/Register">
                                    <i class="bi bi-person-plus me-1"></i>
                                    Register
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - HRS Smart Booking - <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
