@page "/Receptionist/PendingApprovals"
@model HRS_SmartBooking.Pages.Receptionist.PendingApprovalsModel
@{
    ViewData["Title"] = "Pending Approvals";
}

<section class="reception-page">
    <header class="reception-header">
        <div>
            <p class="eyebrow">Approvals</p>
            <h1>Unverified reservations</h1>
            <p>Cards showcase guest info, requested rooms, payment proof, and priority tags.</p>
        </div>
        <button class="btn btn-outline-light">Export list</button>
    </header>

    <div class="card-grid">
        @foreach (var approval in Model.Approvals)
        {
            <article class="approval-card">
                <div class="card-badge @approval.Priority.ToLower()">@approval.Priority priority</div>
                <h2>@approval.Guest</h2>
                <p>@approval.Dates</p>
                <p class="muted">@approval.Room</p>
                <span class="badge badge-outline">@approval.PaymentNote</span>
                <div class="approval-actions">
                    <button class="btn btn-outline-light">Reject</button>
                    <button class="btn btn-gradient">Approve</button>
                </div>
            </article>
        }
    </div>
</section>

