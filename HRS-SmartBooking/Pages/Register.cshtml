@page
@model HRS_SmartBooking.Pages.RegisterModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - HRS Smart Booking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" integrity="sha384-XGjxtQfXaH2tnPFa9x+ruJTuLE3Aa6LhHSWRr1XeTyhezb4abCG4ccI5AkVDxqC+" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="auth-shell">
    <main class="auth-split register-split">
        <section class="auth-visual auth-visual-register" style="background-image: url('https://images.unsplash.com/photo-1566073771259-6a8506099945?auto=format&fit=crop&w=1920&q=80'); background-size: cover; background-position: center;">
            <div class="visual-content">
                <div>
                    <h2 class="slogan">Welcome to HRS Smart Booking!</h2>
                    <p class="slogan-subtitle">Sign up to start your journey with us</p>
                </div>
                <div class="auth-visual-footer">
                    <a asp-page="/Login" class="btn btn-outline-light">BACK TO LOGIN</a>
                </div>
            </div>
        </section>
        <section class="auth-card auth-card-register d-flex flex-column justify-content-center">
            <div class="auth-logo mb-4">H</div>
            <h1>Sign Up</h1>
            <p>Create your account to start booking amazing stays</p>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @Model.ErrorMessage
                </div>
            }

            <form method="post" class="mt-4">
                <div class="row g-3">
                    <div class="col-sm-6">
                        <div class="input-field">
                            <i class="bi bi-person"></i>
                            <input type="text" name="FirstName" placeholder="First name" required />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-field">
                            <i class="bi bi-person"></i>
                            <input type="text" name="LastName" placeholder="Last name" required />
                        </div>
                    </div>
                </div>

                <div class="row g-3 mt-1">
                    <div class="col-sm-6">
                        <div class="input-field">
                            <i class="bi bi-envelope"></i>
                            <input type="email" name="Email" placeholder="Email address" required autocomplete="email" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-field">
                            <i class="bi bi-telephone"></i>
                            <input type="tel" name="PhoneNumber" placeholder="Phone number (optional)" />
                        </div>
                    </div>
                </div>

                <div class="row g-3 mt-1">
                    <div class="col-sm-6">
                        <div class="input-field">
                            <i class="bi bi-shield-lock"></i>
                            <input type="password" id="registerPassword" name="Password" placeholder="Password" required autocomplete="new-password" />
                            <button type="button" class="password-toggle" data-target="registerPassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <div class="password-strength mt-2">
                            <div class="strength-value"></div>
                        </div>
                        <small class="text-muted">Use at least 6 characters with a mix of numbers.</small>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-field">
                            <i class="bi bi-shield-check"></i>
                            <input type="password" id="registerConfirmPassword" name="ConfirmPassword" placeholder="Confirm password" required autocomplete="new-password" />
                            <button type="button" class="password-toggle" data-target="registerConfirmPassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="terms-row mt-3">
                    <input type="checkbox" class="form-check-input mt-1" required />
                    <span>I agree to the <a href="#" class="text-decoration-none">Terms & Conditions</a> and consent to receive booking notifications.</span>
                </div>

                <button type="submit" class="auth-button mt-4">
                    <span>â†’ Create Account</span>
                </button>
            </form>

            <div class="auth-link">
                Already have an account? <a class="link-slide" asp-page="/Login">Sign In <i class="bi bi-arrow-right-short"></i></a>
            </div>
        </section>
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script>
        document.querySelectorAll('.password-toggle').forEach(btn => {
            btn.addEventListener('click', () => {
                const target = document.getElementById(btn.dataset.target);
                if (!target) return;
                target.type = target.type === 'password' ? 'text' : 'password';
                btn.innerHTML = target.type === 'password'
                    ? '<i class="bi bi-eye"></i>'
                    : '<i class="bi bi-eye-slash"></i>';
            });
        });
    </script>
</body>
</html>

