@page "/Manager/Profile"
@model HRS_SmartBooking.Pages.Manager.ProfileModel
@{
    ViewData["Title"] = "Manager Profile";
}

<section class="reception-page manager-page">
    <header class="reception-header">
        <div>
            <p class="eyebrow">Profile</p>
            <h1>Personal profile</h1>
            <p>Identity, contact, and security toggles for manager role.</p>
        </div>
        <a asp-page="/Manager/Settings" class="btn btn-outline-light">Open settings</a>
    </header>

    <div class="dual-grid">
        <article class="section-card">
            <div class="profile-block">
                <div class="avatar avatar-lg">@Model.FullName[0]</div>
                <div>
                    <h2>@Model.FullName</h2>
                    <p>@Model.Role</p>
                </div>
            </div>
            <div class="form-grid">
                <div class="col-span-2">
                    <label>Email</label>
                    <input type="email" value="@Model.Email" />
                </div>
                <div class="col-span-2">
                    <label>Phone</label>
                    <input type="tel" value="@Model.Phone" />
                </div>
            </div>
        </article>
        <article class="section-card">
            <div class="card-header">
                <h2>Security</h2>
            </div>
            <div class="setting-row">
                <div>
                    <strong>Multi-factor</strong>
                    <p>Authenticator app required</p>
                </div>
                <span class="badge badge-outline">Enabled</span>
            </div>
            <div class="setting-row">
                <div>
                    <strong>Biometric unlock</strong>
                    <p>Face ID & Windows Hello supported</p>
                </div>
                <label class="switch">
                    <input type="checkbox" checked />
                    <span></span>
                </label>
            </div>
            <div class="setting-row">
                <div>
                    <strong>Session timeout</strong>
                    <p>Auto logout after 15 minutes idle</p>
                </div>
                <button class="btn btn-outline-light btn-sm">Adjust</button>
            </div>
        </article>
    </div>
</section>

