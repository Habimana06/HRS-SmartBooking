@page "/Admin/Profile"
@model HRS_SmartBooking.Pages.Admin.ProfileModel
@{
    ViewData["Title"] = "Admin Profile";
}

<section class="reception-page admin-page">
    <header class="reception-header">
        <div>
            <p class="eyebrow">Profile</p>
            <h1>Admin profile</h1>
            <p>Personal info, password, theme preferences, and activity log summary.</p>
        </div>
        <button class="btn btn-gradient">Update profile</button>
    </header>

    <div class="dual-grid">
        <article class="section-card">
            <div class="profile-block">
                <div class="avatar avatar-lg">@Model.FullName[0]</div>
                <div>
                    <h2>@Model.FullName</h2>
                    <p>System Administrator</p>
                </div>
            </div>
            <div class="form-grid">
                <div class="col-span-2">
                    <label>Email</label>
                    <input type="email" value="@Model.Email" />
                </div>
                <div class="col-span-2">
                    <label>Phone</label>
                    <input type="tel" value="@Model.Phone" />
                </div>
            </div>
        </article>

        <article class="section-card">
            <div class="card-header">
                <h2>Security</h2>
            </div>
            <div class="setting-row">
                <div>
                    <strong>Password</strong>
                    <p>Updated 12 days ago</p>
                </div>
                <button class="btn btn-outline-light btn-sm">Change</button>
            </div>
            <div class="setting-row">
                <div>
                    <strong>Multi-factor</strong>
                    <p>Required for all admins</p>
                </div>
                <span class="badge badge-outline">Enabled</span>
            </div>
        </article>
    </div>
</section>

