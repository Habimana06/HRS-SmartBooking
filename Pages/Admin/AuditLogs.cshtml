@page "/Admin/AuditLogs"
@model HRS_SmartBooking.Pages.Admin.AuditLogsModel
@{
    ViewData["Title"] = "Audit Logs";
}

<section class="reception-page admin-page">
    <header class="reception-header">
        <div>
            <p class="eyebrow">Logs</p>
            <h1>Audit logs</h1>
            <p>Track every action with user, role, device, and IP.</p>
        </div>
        <div class="header-actions">
            <button class="btn btn-outline-light">Export CSV</button>
            <button class="btn btn-gradient">Export PDF</button>
        </div>
    </header>

    <form class="filter-bar">
        <div class="filter-field">
            <label>Role</label>
            <select>
                <option>All</option>
                <option>Admin</option>
                <option>Manager</option>
                <option>Finance</option>
            </select>
        </div>
        <div class="filter-field">
            <label>Date range</label>
            <input type="date" min="2001-01-01" max="@DateTime.Now.AddYears(10).ToString("yyyy-MM-dd")" />
        </div>
        <div class="filter-field">
            <label>Action</label>
            <input type="text" placeholder="Search actions" />
        </div>
        <div class="filter-field">
            <label>IP</label>
            <input type="text" placeholder="192.168.1.10" />
        </div>
        <button class="btn btn-outline-light" type="button">Filter</button>
    </form>

    <div class="data-card table-card">
        <div class="card-header">
            <h2>Log entries</h2>
        </div>
        <div class="responsive-table">
            <table>
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>User</th>
                        <th>Role</th>
                        <th>Date & time</th>
                        <th>IP</th>
                        <th>Device</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model.Logs)
                    {
                        <tr>
                            <td>@log.Action</td>
                            <td>@log.User</td>
                            <td>@log.Role</td>
                            <td>@log.Time</td>
                            <td>@log.Ip</td>
                            <td>@log.Device</td>
                            <td><span class="status">@log.Status</span></td>
                            <td class="actions">
                                <button class="btn btn-icon btn-compact">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

