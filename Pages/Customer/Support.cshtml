@page "/Customer/Support"
@model HRS_SmartBooking.Pages.Customer.SupportModel
@{
    ViewData["Title"] = "Support";
}

<section class="customer-section support-page">
    <div class="section-header">
        <div>
            <p class="eyebrow">Support</p>
            <h1>Concierge, live chat, map, FAQ</h1>
            <p>Premium contact section with interactive elements, dark UI, animated cards.</p>
        </div>
    </div>

    <div class="support-grid">
        <div class="glass-panel">
            <h2>Contact form</h2>
            <form method="post" asp-page-handler="SendMessage">
                <div class="form-grid">
                    <div>
                        <label>Subject</label>
                        <input type="text" asp-for="Input.Subject" placeholder="Brief subject" required />
                        <span asp-validation-for="Input.Subject" class="text-danger"></span>
                    </div>
                    <div>
                        <label>Category</label>
                        <select asp-for="Input.Category" required>
                            <option value="">Select category</option>
                            <option value="Booking support">Booking support</option>
                            <option value="Billing">Billing</option>
                            <option value="On-site request">On-site request</option>
                            <option value="General inquiry">General inquiry</option>
                        </select>
                        <span asp-validation-for="Input.Category" class="text-danger"></span>
                    </div>
                    <div class="col-span-2">
                        <label>Message</label>
                        <textarea rows="4" asp-for="Input.Description" placeholder="Tell us what's happening" required></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>
                    <div class="col-span-2">
                        <button type="submit" class="btn btn-gradient w-100">Send message</button>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="col-span-2">
                            <div class="alert alert-success">@Model.SuccessMessage</div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="col-span-2">
                            <div class="alert alert-danger">@Model.ErrorMessage</div>
                        </div>
                    }
                </div>
            </form>
        </div>

        <div class="glass-panel live-chat">
            <h2>Live chat mock</h2>
            <div class="chat-window">
                <div class="chat-bubble agent">
                    <p>Hi! I'm Ava, your 24/7 concierge. Need help reshuffling rooms?</p>
                </div>
                <div class="chat-bubble user">
                    <p>Yes, can I upgrade to Skyline Loft for Sunday?</p>
                </div>
                <div class="chat-bubble agent">
                    <p>Absolutely. Sending availability now. Expect a push notification in 6s.</p>
                </div>
            </div>
            <div class="chat-input">
                <input type="text" placeholder="Type a message..." />
                <button class="btn btn-outline-light">
                    <i class="bi bi-send"></i>
                </button>
            </div>
        </div>

        <div class="glass-panel map-panel">
            <h2>Map</h2>
            <div class="map-placeholder">
                <span>Interactive map placeholder</span>
            </div>
            <div class="contact-details">
                <p>Address: 221B Grand Avenue, Skyline District</p>
                <p>Phone: +1 222 555 0101</p>
                <p>Email: concierge@hrsbooking.com</p>
            </div>
        </div>

        <div class="glass-panel faq">
            <h2>FAQ</h2>
            <details open>
                <summary>How fast is booking confirmation?</summary>
                <p>Instant. We sync to PMS + CRM and send push, SMS, and email receipts.</p>
            </details>
            <details>
                <summary>Can I request late checkout?</summary>
                <p>Yesâ€”tap Support in your profile and pick a new time. We'll confirm instantly.</p>
            </details>
            <details>
                <summary>Do you have multilingual agents?</summary>
                <p>Yes, but the UI is English-first. Agents respond in your requested language.</p>
            </details>
        </div>
    </div>
</section>

