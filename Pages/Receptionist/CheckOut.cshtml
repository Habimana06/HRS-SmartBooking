@page "/Receptionist/CheckOut"
@model HRS_SmartBooking.Pages.Receptionist.CheckOutModel
@{
    ViewData["Title"] = "Check-out Guests";
}

<section class="reception-page">
    <header class="reception-header">
        <div>
            <p class="eyebrow">Check-out flow</p>
            <h1>Finalize departures</h1>
            <p>Review stay summary, calculate balances, add damage fees, and print invoices from a single screen.</p>
        </div>
        <div class="header-actions">
            <button class="btn btn-outline-light">Download PDF</button>
            <button class="btn btn-gradient">Mark checkout complete</button>
        </div>
    </header>

    <div class="triple-grid">
        <article class="data-card">
            <div class="card-header">
                <h2>Stay details</h2>
                <span class="badge badge-outline">Live booking</span>
            </div>
            <dl class="detail-list">
                <div>
                    <dt>Guest</dt>
                    <dd>Oliver White</dd>
                </div>
                <div>
                    <dt>Room</dt>
                    <dd>Skyline Suite • 0902</dd>
                </div>
                <div>
                    <dt>Check-in / out</dt>
                    <dd>Dec 01 - Dec 04</dd>
                </div>
                <div>
                    <dt>Payment</dt>
                    <dd>Card on file • Verified</dd>
                </div>
            </dl>
            <textarea rows="3" placeholder="Optional notes or damage report"></textarea>
        </article>

        <article class="data-card">
            <div class="card-header">
                <h2>Charges</h2>
                <span class="badge badge-outline">USD</span>
            </div>
            <ul class="charge-list">
                <li>
                    <span>Room total</span>
                    <strong>$@Model.RoomTotal</strong>
                </li>
                <li>
                    <span>Mini-bar</span>
                    <strong>$@Model.MiniBarCharges</strong>
                </li>
                <li>
                    <span>Late checkout</span>
                    <strong>$@Model.LateCheckoutFee</strong>
                </li>
            </ul>
            <div class="total-row">
                <span>Grand total</span>
                <strong>$@Model.GrandTotal</strong>
            </div>
        </article>

        <article class="data-card">
            <div class="card-header">
                <h2>Actions</h2>
            </div>
            <form class="form-grid">
                <div class="col-span-2">
                    <label>Invoice preference</label>
                    <select>
                        <option>Email + Print</option>
                        <option>Email only</option>
                        <option>Print only</option>
                    </select>
                </div>
                <div class="col-span-2 toggle-row">
                    <label class="switch">
                        <input type="checkbox" checked />
                        <span></span>
                    </label>
                    <p>Notify housekeeping automatically</p>
                </div>
                <div class="col-span-2 action-row">
                    <button type="button" class="btn btn-outline-light">Preview invoice</button>
                    <button type="button" class="btn btn-gradient">Complete checkout</button>
                </div>
            </form>
        </article>
    </div>
</section>

