@page "/Receptionist/CustomerRequests"
@model HRS_SmartBooking.Pages.Receptionist.CustomerRequestsModel
@{
    ViewData["Title"] = "Customer Requests";
}

<section class="reception-page">
    <header class="reception-header">
        <div>
            <p class="eyebrow">Requests & complaints</p>
            <h1>High-touch concierge board</h1>
            <p>Card list with priority tags, chat preview, and resolve/forward actions.</p>
        </div>
        <button class="btn btn-outline-light">View SLA metrics</button>
    </header>

    <div class="request-list">
        @foreach (var request in Model.Requests)
        {
            <article class="request-card">
                <div class="request-meta">
                    <strong>@request.Guest</strong>
                    <span class="priority @request.Priority.ToLower()">@request.Priority priority</span>
                </div>
                <p>@request.Message</p>
                <div class="request-actions">
                    <span class="status-pill">@request.Status</span>
                    <div class="button-row">
                        <button class="btn btn-outline-light btn-sm">Forward</button>
                        <button class="btn btn-gradient btn-sm">Resolve</button>
                    </div>
                </div>
            </article>
        }
    </div>
</section>

