@page "/Receptionist/CheckIn"
@model HRS_SmartBooking.Pages.Receptionist.CheckInModel
@{
    ViewData["Title"] = "Check-in Guests";
}

<section class="reception-page">
    <header class="reception-header">
        <div>
            <p class="eyebrow">Check-in flow</p>
            <h1>Welcome guests quickly</h1>
            <p>Search bookings, verify ID, assign rooms, and trigger confirmations with auto-notify toggles.</p>
        </div>
        <button class="btn btn-gradient">
            <i class="bi bi-printer me-2"></i>
            Print summary
        </button>
    </header>

    <div class="dual-grid">
        <article class="data-card">
            <div class="card-header">
                <h2>Search booking</h2>
                <span class="badge badge-outline">Live PMS</span>
            </div>
            <form class="form-grid">
                <div class="col-span-2">
                    <label>Booking ID or customer</label>
                    <div class="input-icon">
                        <i class="bi bi-search"></i>
                        <input type="search" placeholder="BK-2025 or guest name" />
                    </div>
                </div>
                <div>
                    <label>Guest name</label>
                    <input type="text" placeholder="Emily Carter" />
                </div>
                <div>
                    <label>Room</label>
                    <select>
                        <option>Select room</option>
                        <option>1608</option>
                        <option>1503</option>
                        <option>1204</option>
                    </select>
                </div>
                <div>
                    <label>Payment status</label>
                    <select>
                        <option>Paid</option>
                        <option>Pending</option>
                    </select>
                </div>
                <div>
                    <label>Special notes</label>
                    <input type="text" placeholder="Allergy, VIP, ETA..." />
                </div>
                <div class="col-span-2 toggle-row">
                    <label class="switch">
                        <input type="checkbox" checked />
                        <span></span>
                    </label>
                    <p>Auto-notify guest via SMS + email</p>
                </div>
                <div class="col-span-2 action-row">
                    <button type="button" class="btn btn-outline-light">Assign room</button>
                    <button type="button" class="btn btn-gradient">Confirm check-in</button>
                </div>
            </form>
        </article>

        <article class="data-card">
            <div class="card-header">
                <h2>Pre-checklist</h2>
                <span class="badge badge-outline">@Model.Checklist.Count steps</span>
            </div>
            <ul class="checklist">
                @foreach (var item in Model.Checklist)
                {
                    <li class="@(item.Completed ? "done" : string.Empty)">
                        <i class="bi @(item.Completed ? "bi-check-circle" : "bi-circle")"></i>
                        <div>
                            <strong>@item.Title</strong>
                            <small>@(item.Completed ? "Complete" : "Pending")</small>
                        </div>
                    </li>
                }
            </ul>
        </article>
    </div>
</section>

