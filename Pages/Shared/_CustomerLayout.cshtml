@using System.Linq
@using HRS_SmartBooking.Services
@inject AuthService AuthService
@{
    var userFirstName = Context.Session.GetString("FirstName") ?? "Guest";
    var userLastName = Context.Session.GetString("LastName") ?? "Explorer";
    var fullName = $"{userFirstName} {userLastName}".Trim();
    var currentPath = Context.Request.Path;
    var themePreference = Context.Session?.GetString("ThemePreference") ?? "light";

    List<(string Title, string Page)> navItems = new()
    {
        ("Home", "/Customer/Home"),
        ("Explore", "/Customer/Explore"),
        ("Rooms", "/Customer/Rooms"),
        ("Booking", "/Customer/Booking"),
        ("My Bookings", "/Customer/MyBookings")
    };

    Func<string, string> isActive = path =>
        currentPath.StartsWithSegments(path, StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Customer | HRS Smart Booking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" integrity="sha384-XGjxtQfXaH2tnPFa9x+ruJTuLE3Aa6LhHSWRr1XeTyhezb4abCG4ccI5AkVDxqC+" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/customer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/chat-widget.css" asp-append-version="true" />
</head>
<body class="customer-shell theme-@themePreference">
    <header class="customer-navbar navbar navbar-expand-lg navbar-dark frosted-shell">
        <div class="container-fluid">
            <a class="navbar-brand customer-brand" asp-page="/Customer/Home">
                <span class="brand-mark">H</span>
                <div class="d-flex flex-column lh-1">
                    <strong>HRS Smart Booking</strong>
                    <small class="text-uppercase tracking-wide">Curated stays</small>
                </div>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#customerNav" aria-controls="customerNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="customerNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 customer-nav">
                    @foreach (var nav in navItems)
                    {
                        <li class="nav-item">
                            <a class="nav-link customer-link @isActive(nav.Page)" asp-page="@nav.Page">@nav.Title</a>
                        </li>
                    }
                </ul>
                <div class="d-flex align-items-center gap-3 nav-actions flex-wrap">
                    <a asp-page="/Customer/Booking" class="btn btn-gradient d-none d-lg-inline-flex align-items-center gap-2">
                        <i class="bi bi-calendar2-heart"></i>
                        Book a stay
                    </a>
                    <div class="dropdown">
                        <button class="btn btn-profile d-flex align-items-center gap-2" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="avatar">@string.Concat(userFirstName.Take(1)).ToUpper()</div>
                            <span class="d-none d-md-inline">@fullName</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end p-3 customer-profile-panel">
                            <div class="profile-header mb-3">
                                <div class="avatar avatar-lg">@string.Concat(userFirstName.Take(1)).ToUpper()</div>
                                <div>
                                    <strong>@fullName</strong>
                                    <p class="mb-0 text-muted small">@Context.Session.GetString("Email")</p>
                                </div>
                            </div>
                            <div class="profile-details mb-3">
                                <p class="mb-1"><strong>Phone:</strong> @Context.Session.GetString("PhoneNumber") ?? "Not set"</p>
                                <p class="mb-1"><strong>Member tier:</strong> Voyager</p>
                            </div>
                            <a asp-page="/Customer/Profile" class="btn btn-sm btn-primary w-100 mb-2">
                                <i class="bi bi-pencil-square me-1"></i>Edit profile
                            </a>
                            <form method="post" asp-page="/Preferences/Update" asp-page-handler="Theme" class="mb-2">
                                <input type="hidden" name="mode" value="@(themePreference == "dark" ? "light" : "dark")" />
                                <button type="submit" class="btn btn-outline-secondary btn-sm w-100 d-inline-flex align-items-center justify-content-center gap-1">
                                    <i class="bi @(themePreference == "dark" ? "bi-sun" : "bi-moon")"></i>
                                    <span>@(themePreference == "dark" ? "Light mode" : "Dark mode")</span>
                                </button>
                            </form>
                            <a asp-page="/Logout" class="btn btn-outline-danger btn-sm w-100 d-inline-flex align-items-center justify-content-center gap-1">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="customer-main">
        <div class="container-fluid px-3 px-md-4 py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="customer-footer">
        <div class="footer-grid">
            <div>
                <div class="brand-mark mb-2">H</div>
                <p class="footer-tagline">Smart stays, curated for your next story.</p>
                <div class="footer-social">
                    <a href="#"><i class="bi bi-twitter"></i></a>
                    <a href="#"><i class="bi bi-instagram"></i></a>
                    <a href="#"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
            <div>
                <h6>Explore</h6>
                <a asp-page="/Customer/Rooms">Rooms</a>
                <a asp-page="/Customer/Booking">Booking</a>
            </div>
            <div>
                <h6>Support</h6>
                <a href="mailto:support@hrssmartbooking.com">Email concierge</a>
                <a href="tel:+1234567890">Call +1 234 567 890</a>
                <a asp-page="/Privacy">Privacy center</a>
            </div>
            <div>
                <h6>Stay inspired</h6>
                <p class="text-muted small mb-2">Monthly tips, destination guides, and private offers.</p>
                <form class="footer-newsletter">
                    <input type="email" placeholder="Email address" required />
                    <button type="submit">Subscribe</button>
                </form>
            </div>
        </div>
        <div class="footer-bottom">
            <span>&copy; @DateTime.Now.Year HRS Smart Booking</span>
            <small>Plan trips, manage stays, and stay connected with your travel concierge.</small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    <!-- Chat Widget -->
    <div class="chat-widget-container">
        <button class="chat-button" id="chatToggleBtn" title="Chat with Support">
            <i class="bi bi-chat-dots"></i>
        </button>
        <div class="chat-window" id="chatWindow">
            <div class="chat-header">
                <h3>Support Chat</h3>
                <button type="button" id="chatCloseBtn">
                    <i class="bi bi-x"></i>
                </button>
            </div>
            <div class="chat-messages" id="chatMessages">
                <div class="chat-loading">Loading messages...</div>
            </div>
            <div class="chat-input-container">
                <input type="text" id="chatInput" placeholder="Type your message..." />
                <button type="button" id="chatSendBtn">
                    <i class="bi bi-send"></i>
                </button>
            </div>
        </div>
    </div>
    
    <script>
        (function() {
            const chatToggleBtn = document.getElementById('chatToggleBtn');
            const chatWindow = document.getElementById('chatWindow');
            const chatCloseBtn = document.getElementById('chatCloseBtn');
            const chatMessages = document.getElementById('chatMessages');
            const chatInput = document.getElementById('chatInput');
            const chatSendBtn = document.getElementById('chatSendBtn');
            
            let isLoading = false;
            let pollInterval = null;
            
            // Toggle chat window
            chatToggleBtn.addEventListener('click', () => {
                const isOpening = !chatWindow.classList.contains('open');
                chatWindow.classList.toggle('open');
                if (isOpening) {
                    // Load messages immediately (will show greeting if no messages)
                    loadMessages();
                    startPolling();
                } else {
                    stopPolling();
                }
            });
            
            chatCloseBtn.addEventListener('click', () => {
                chatWindow.classList.remove('open');
                stopPolling();
            });
            
            // Send message
            function sendMessage() {
                const message = chatInput.value.trim();
                if (!message || isLoading) return;
                
                isLoading = true;
                chatSendBtn.disabled = true;
                
                fetch('/Customer/ChatApi?handler=SendMessage', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ message: message })
                })
                .then(async response => {
                    const data = await response.json();
                    if (!response.ok) {
                        throw new Error(data.error || 'Failed to send message');
                    }
                    return data;
                })
                .then(data => {
                    if (data.success) {
                        chatInput.value = '';
                        loadMessages();
                    } else {
                        throw new Error(data.error || 'Failed to send message');
                    }
                })
                .catch(error => {
                    console.error('Error sending message:', error);
                    alert(error.message || 'Error sending message. Please try again.');
                })
                .finally(() => {
                    isLoading = false;
                    chatSendBtn.disabled = false;
                });
            }
            
            chatSendBtn.addEventListener('click', sendMessage);
            chatInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    sendMessage();
                }
            });
            
            // Load messages
            function loadMessages() {
                fetch('/Customer/ChatApi?handler=Messages')
                    .then(async response => {
                        if (!response.ok) {
                            const error = await response.json().catch(() => ({ error: 'Failed to load messages' }));
                            throw new Error(error.error || 'Failed to load messages');
                        }
                        return response.json();
                    })
                    .then(messages => {
                        if (Array.isArray(messages)) {
                            displayMessages(messages);
                            checkUnread(messages);
                        } else {
                            showGreeting();
                        }
                    })
                    .catch(error => {
                        console.error('Error loading messages:', error);
                        // Show greeting even on error, so user can still try to send messages
                        showGreeting();
                    });
            }
            
            // Show greeting message
            function showGreeting() {
                chatMessages.innerHTML = `
                    <div class="chat-greeting">
                        <span class="greeting-icon">ðŸ‘‹</span>
                        <div class="greeting-title">Hello! Welcome to HRS Smart Booking</div>
                        <p class="greeting-text">We're here to help you with any questions about your bookings, rooms, or anything else you need. How can we assist you today?</p>
                    </div>
                `;
            }
            
            // Display messages
            function displayMessages(messages) {
                if (messages.length === 0) {
                    showGreeting();
                    return;
                }
                
                // Show greeting first, then all messages
                let html = '';
                
                // Add greeting if this is the first time loading and no messages exist
                const hasCustomerMessages = messages.some(msg => msg.isFromCustomer);
                if (!hasCustomerMessages) {
                    html = `
                        <div class="chat-greeting">
                            <span class="greeting-icon">ðŸ‘‹</span>
                            <div class="greeting-title">Hello! Welcome to HRS Smart Booking</div>
                            <p class="greeting-text">We're here to help you with any questions about your bookings, rooms, or anything else you need. How can we assist you today?</p>
                        </div>
                    `;
                }
                
                // Add all messages (history)
                html += messages.map(msg => {
                    const date = new Date(msg.createdAt);
                    const time = date.toLocaleTimeString('en-US', { 
                        hour: '2-digit', 
                        minute: '2-digit' 
                    });
                    const dateStr = date.toLocaleDateString('en-US', {
                        month: 'short',
                        day: 'numeric',
                        year: date.getFullYear() !== new Date().getFullYear() ? 'numeric' : undefined
                    });
                    const isCustomer = msg.isFromCustomer;
                    const showDate = messages.indexOf(msg) === 0 || 
                        new Date(msg.createdAt).toDateString() !== new Date(messages[messages.indexOf(msg) - 1].createdAt).toDateString();
                    
                    let messageHtml = '';
                    if (showDate) {
                        messageHtml += `<div style="text-align: center; color: #6b7280; font-size: 11px; margin: 12px 0; padding: 4px 0;">${dateStr}</div>`;
                    }
                    messageHtml += `
                        <div class="chat-message ${isCustomer ? 'customer' : 'receptionist'}">
                            <div>${escapeHtml(msg.messageText)}</div>
                            <div class="chat-message-time">${time}</div>
                        </div>
                    `;
                    return messageHtml;
                }).join('');
                
                chatMessages.innerHTML = html;
                
                // Scroll to bottom to show latest messages
                setTimeout(() => {
                    chatMessages.scrollTop = chatMessages.scrollHeight;
                }, 100);
            }
            
            // Check for unread messages
            function checkUnread(messages) {
                const hasUnread = messages.some(msg => !msg.isRead && !msg.isFromCustomer);
                chatToggleBtn.classList.toggle('has-unread', hasUnread);
            }
            
            // Start polling for new messages
            function startPolling() {
                if (pollInterval) clearInterval(pollInterval);
                pollInterval = setInterval(() => {
                    if (chatWindow.classList.contains('open')) {
                        loadMessages();
                    }
                }, 3000); // Poll every 3 seconds
            }
            
            // Stop polling
            function stopPolling() {
                if (pollInterval) {
                    clearInterval(pollInterval);
                    pollInterval = null;
                }
            }
            
            // Escape HTML
            function escapeHtml(text) {
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }
            
            // Initial load
            loadMessages();
            startPolling();
        })();
    </script>
</body>
</html>

